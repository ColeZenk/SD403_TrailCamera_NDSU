{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build FPGA",
            "type": "shell",
            "command": "make build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Program FPGA",
            "type": "shell",
            "command": "make program",
            "problemMatcher": []
        },
        {
            "label": "Simulate",
            "type": "shell",
            "command": "make simulate",
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "View Schematic",
            "type": "shell",
            "command": "make schematic",
            "problemMatcher": []
        }
    ]
}